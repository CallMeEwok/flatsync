{
  "compilerOptions": {
    "module": "NodeNext",
    "esModuleInterop": true,
    "moduleResolution": "nodenext",
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "outDir": "lib",  // ✅ Ensure compiled files go to 'lib'
    "rootDir": "src", // ✅ Specify the source folder
    "sourceMap": true,
    "strict": true,
    "target": "es2017"
  },
  "compileOnSave": true,
  "include": [
    "src" // ✅ Include only the source folder
  ]
}
